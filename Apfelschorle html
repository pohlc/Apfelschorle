<body>

  <h1>Interaktives Arbeitsblatt</h1>
  <p>Klicke auf ein Feld, um den Text zu sehen. Nach dem Lesen wird das Feld mit einem X markiert.</p>

  <div class="feld-container">
    <div class="feld" data-id="1">Feld 1</div>
    <div class="feld" data-id="2">Feld 2</div>
    <div class="feld" data-id="3">Feld 3</div>
    <div class="feld" data-id="4">Feld 4</div>
    <div class="feld" data-id="5">Feld 5</div>
  </div>

  <div class="feld-container unterhalb">
    <div class="feld breit" data-id="6">Feld 6 (breit)</div>
  </div>

  <!-- Modal-Fenster -->
  <div id="modal" class="modal-hintergrund">
    <div class="modal-inhalt">
      <span id="modalSchliessen" class="modal-schliessen">&times;</span>
      <h2 id="modalTitel"></h2>
      <p id="modalText"></p>
    </div>
  </div>

  <script>
    // Texte für alle 6 Felder
    const feldTexte = {
      1: { titel: "Text zu Feld 1", text: "Hier steht der Text, der erscheinen soll, wenn auf Feld 1 geklickt wird." },
      2: { titel: "Text zu Feld 2", text: "Hier steht der Text zu Feld 2. Du kannst beliebige Inhalte einsetzen." },
      3: { titel: "Text zu Feld 3", text: "Beispieltext für Feld 3. Dieser Text kann natürlich fachliche Inhalte enthalten." },
      4: { titel: "Text zu Feld 4", text: "Hier folgt der Text zu Feld 4." },
      5: { titel: "Text zu Feld 5", text: "Dies ist der Text zu Feld 5." },
      6: { titel: "", text: "Hier kommt dein Inhalt für die breite Box unten hin. Kann länger sein als die anderen Texte!" }
    };

    // Elemente holen
    const felder = document.querySelectorAll(".feld");
    const modal = document.getElementById("modal");
    const modalTitel = document.getElementById("modalTitel");
    const modalText = document.getElementById("modalText");
    const modalSchliessen = document.getElementById("modalSchliessen");

    let aktuellesFeld = null;

    // Klick-Handler für alle Felder
    felder.forEach(feld => {
      feld.addEventListener("click", function() {
        const id = this.getAttribute("data-id");
        aktuellesFeld = this;

        modalTitel.textContent = feldTexte[id].titel || "";
        modalText.textContent = feldTexte[id].text;

        modal.style.display = "block";
        document.body.style.overflow = "hidden";
      });
    });

    // Modal schließen
    modalSchliessen.addEventListener("click", function() {
      modal.style.display = "none";
      document.body.style.overflow = "auto";
      markiereFeldMitX();
    });

    // Klick außerhalb Modal
    window.addEventListener("click", function(event) {
      if (event.target === modal) {
        modal.style.display = "none";
        document.body.style.overflow = "auto";
        markiereFeldMitX();
      }
    });

    // ESC-Taste
    document.addEventListener("keydown", function(event) {
      if (event.key === "Escape" && modal.style.display === "block") {
        modal.style.display = "none";
        document.body.style.overflow = "auto";
        markiereFeldMitX();
      }
    });

    function markiereFeldMitX() {
      if (!aktuellesFeld) return;
      
      if (!aktuellesFeld.querySelector(".feld-x")) {
        const xSpan = document.createElement("span");
        xSpan.className = "feld-x";
        xSpan.textContent = "X";
        aktuellesFeld.appendChild(xSpan);
      }
    }
  </script>

</body>
